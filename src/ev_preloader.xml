	<version>2.0.1</version>
	<description>PLG_SYS_EV_PRELOADER_XML_DESC</description>
	<scriptfile>installer.php</scriptfile>
	
	<files>
		<filename plugin="ev_preloader">ev_preloader.php</filename>
		<filename>index.html</filename>

		<filename>images/index.html</filename>
		<filename>images/everlive2_300.png</filename>
		
		<filename>styles/index.html</filename>
		<filename>styles/pfinal.js</filename>
		
		<filename>styles/style-1.css</filename>
